pipeline {
    options {
        timestamps()
        skipDefaultCheckout()
        disableConcurrentBuilds()
    }
    agent {
        node { label 'transltr-ci-build-node-01' }
    }
    parameters {
        string(name: 'BUILD_VERSION', defaultValue: '', description: 'The build version to deploy (optional)')
        string(name: 'AWS_REGION', defaultValue: 'us-east-1', description: 'AWS Region to deploy')
        string(name: 'KUBERNETES_CLUSTER_NAME', defaultValue: 'translator-eks-ci-blue-cluster', description: 'AWS EKS that will host this application')
    }
    triggers {
        pollSCM('H/2 * * * *')
    }
    stages {
        stage('Clean') {
            steps {
                cleanWs()
                checkout scm
            }
        }
        stage('Build Version') {
            when {
                allOf {
                    expression {
                        return !params.BUILD_VERSION
                    }
                    anyOf {
                        changeset "python-flask-server/*"
                        triggeredBy 'UserIdCause'
                    }
                }
            }
            steps{
               script {
                    BUILD_VERSION_GENERATED = VersionNumber(
                        versionNumberString: 'v${BUILD_YEAR, XX}.${BUILD_MONTH, XX}${BUILD_DAY, XX}.${BUILDS_TODAY}',
                        projectStartDate:    '1970-01-01',
                        skipFailedBuilds:    true)
                    currentBuild.displayName = BUILD_VERSION_GENERATED
                    env.BUILD_VERSION = BUILD_VERSION_GENERATED
              }
           }
        }
        stage('build') {
            when {
                allOf {
                    expression {
                        return !params.BUILD_VERSION
                    }
                    anyOf {
                        changeset "python-flask-server/*"
                        triggeredBy 'UserIdCause'
                    }
                }
            }
            steps {
                withEnv([
                    "IMAGE_NAME=translator-genetics-provider",
                    "BUILD_VERSION=" + (params.BUILD_VERSION ?: env.BUILD_VERSION)
                ]) {
                    dir(".") {
                        withCredentials([string(credentialsId: 'GENETICSPROVIDER_FLASK_PORT' , variable: 'GENETICSPROVIDER_FLASK_PORT'),
                                         string(credentialsId: 'GENETICSPROVIDER_DB_HOST' , variable: 'GENETICSPROVIDER_DB_HOST'),
                                         string(credentialsId: 'GENETICSPROVIDER_DB_USER' , variable: 'GENETICSPROVIDER_DB_USER'),
                                         string(credentialsId: 'GENETICSPROVIDER_DB_PASSWD' , variable: 'GENETICSPROVIDER_DB_PASSWD'),
                                         string(credentialsId: 'GENETICSPROVIDER_DB_SCHEMA' , variable: 'GENETICSPROVIDER_DB_SCHEMA'),
                                         string(credentialsId: 'GENETICSPROVIDER_DB_CACHE_SCHEMA' , variable: 'GENETICSPROVIDER_CACHE_SCHEMA'),
                                         string(credentialsId: 'GENETICSPROVIDER_DB_RESULTS_LIMIT' , variable: 'GENETICSPROVIDER_DB_RESULTS_LIMIT'),
                                         string(credentialsId: 'GENETICSPROVIDER_TRAN_MAX_QUERY_SIZE' , variable: 'GENETICSPROVIDER_TRAN_MAX_QUERY_SIZE'),
                                         string(credentialsId: 'GENETICSPROVIDER_TRAN_URL_NORMALIZER' , variable: 'GENETICSPROVIDER_TRAN_URL_NORMALIZER')]) {
                        script {
                             sh "docker build -t ${env.IMAGE_NAME}, --build-arg SOURCE_FOLDER=./${BUILD_VERSION} --no-cache \
                                     --build-arg fl_port=${GENETICSPROVIDER_FLASK_PORT} \
                                     --build-arg db_host=${GENETICSPROVIDER_DB_HOST} \
                                     --build-arg db_user=${GENETICSPROVIDER_DB_USER} \
                                     --build-arg db_passwd=${GENETICSPROVIDER_DB_PASSWD} \
                                     --build-arg db_schema=${GENETICSPROVIDER_DB_SCHEMA} \
                                     --build-arg db_cache_schema=${GENETICSPROVIDER_DB_CACHE_SCHEMA} \
                                     --build-arg db-results_limit=${GENETICSPROVIDER_DB_RESULTS_LIMIT} \
                                     --build-arg tran_max_query_size=${GENETICSPROVIDER_TRAN_MAX_QUERY_SIZE} \
                                     --build-arg tran_url_normalizer=${GENETICSPROVIDER_TRAN_URL_NORMALIZER}  . "

                                 docker.withRegistry('https://853771734544.dkr.ecr.us-east-1.amazonaws.com', 'ecr:us-east-1:ifx-jenkins-ci') {
                                     docker.image("${env.IMAGE_NAME}").push("${BUILD_VERSION}")
                            }
                        }

                      } 
                    }
                }
            }
        }
        stage('Deploy') {
            when {
                anyOf {
                    changeset "python-flask-server/*"
                    triggeredBy 'UserIdCause'
                }
            }
            steps {
                sshagent (credentials: ['0360ecc2-120b-49df-ad82-a1c53fa961d0']) {
                    dir(".") {
                        sh 'git clone -b gpkp git@github.com:Sphinx-Automation/translator-ops.git'
                        configFileProvider([
                            configFile(fileId: 'genetics-kp-ci-env', targetLocation: 'translator-ops/ops/geneticskp/.env')
                        ]){
                            withAWS(credentials:'aws-ifx-deploy') {
                                sh '''
                                aws --region ${AWS_REGION} eks update-kubeconfig --name ${KUBERNETES_CLUSTER_NAME}
                                cd translator-ops/ops/geneticskp/
                                /bin/bash deploy.sh
                                '''
                            }
                        }
                    }
                }
            }
        }
    }
}

